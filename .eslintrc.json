{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},

	"extends": [
		"react-app",
		"react-app/jest",
		"airbnb",
		"eslint:recommended",
		"plugin:prettier/recommended",
		"prettier"
	],
	"plugins": ["react", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		},
		"project": "./jsconfig.json"
	},
	"rules": {
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
		"linebreak-style": 0,
		"quotes": [2, "single", { "avoidEscape": true }],
		"react/prop-types": 0,
		"react/jsx-props-no-spreading": "off",
		"react/react-in-jsx-scope": "off",
		"react/jsx-uses-react": "off",
		"no-shadow": "off",
		"prettier/prettier": [
			"error",
			{
				"semi": false,
				"trailingComma": "all",
				"endOfLine": "lf",
				"tabWidth": 2,
				"useTabs": false,
				"singleQuote": true,
				"printWidth": 120,
				"jsxSingleQuote": false
			}
		]
	}
}
